{
  "manifest_version": 3,
  "name": "notioner",
  "version": "1.1",
  "description": "优化 Notion 样式",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.notion.so/*"],
      "js": ["dist/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["fonts.css"],
      "matches": ["*://*.notion.so/*"]
    }
  ],
  "icons": {
    "16": "assets/notioner-logo-x16.png",
    "32": "assets/notioner-logo-x32.png",
    "48": "assets/notioner-logo-x48.png",
    "64": "assets/notioner-logo-x64.png",
    "128": "assets/notioner-logo-x128.png"
  }
}
