{
  "manifest_version": 3,
  "name": "notioner",
  "version": "1.1",
  "description": "优化 Notion 样式",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.notion.so/*"],
      "js": ["dist/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["fonts.css"],
      "matches": ["*://*.notion.so/*"]
    }
  ],
  "icons": {
    "16": "/assets/icon.ico",
    "48": "/assets/icon.ico",
    "128": "/assets/icon.ico"
  }
}
